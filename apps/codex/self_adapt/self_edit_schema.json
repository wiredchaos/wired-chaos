{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChaosSelfEdit",
  "type": "object",
  "required": ["timestamp", "agent", "input", "generated_edit"],
  "properties": {
    "timestamp": {"type": "string"},
    "agent": {"type": "string"},
    "session": {"type": "string"},
    "input": {"type": "string"},
    "context": {"type": "object"},
    "generated_edit": {
      "type": "object",
      "required": ["type", "delta"],
      "properties": {
        "type": {"type": "string", "enum": ["prompt_delta","policy_rule","tool_hint","hyperparam_hint"]},
        "delta": {"type": "string"}
      }
    },
    "reward": {"type": "number"},
    "tags": {"type": "array", "items": {"type": "string"}},
    "edit_id": {"type": "string"}
  }
}
