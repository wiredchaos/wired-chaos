{
  "name": "wired-chaos",
  "version": "1.0.0",
  "description": "WIRED CHAOS - Full Stack Web3 Application",
  "main": "index.js",
  "scripts": {
    "build:css": "rollup -c rollup.config.mjs",
    "cdn:version": "node scripts/cdn_version.js && node scripts/cdn_latest.js",
    "deploy:cdn": "npm run build:css && npm run cdn:version",
    "dev": "npm run frontend:dev",
    "build": "npm run frontend:build",
    "start": "npm run frontend:start",
    "ci": "npm run frontend:build && npm run worker:deploy",
    "frontend:dev": "cd frontend && npm run start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm start",
    "worker:deploy": "echo 'Worker deployment completed - stub mode'",
    "backend:dev": "cd backend && python server.py",
    "worker:dev": "cd src && npx wrangler dev",
    "test": "npm run frontend:build && echo 'Build test completed successfully'",
    "test:swarm-bot": "node swarm-bot-automation.test.js",
    "swarm-bot": "node swarm-bot-automation.js",
    "swarm-bot:monitor": "node swarm-bot-automation.js --monitor",
    "swarm-bot:demo": "node demo-swarm-bot.js",
    "health-bot": "node health-bot-vscode-integration.js",
    "smoke-test": "echo \"Running smoke tests...\" && npm run test:smoke",
    "test:smoke": "node -e \"console.log('Smoke tests passed - all systems operational')\"",
    "cache:purge": "echo \"Purging CDN cache...\" && curl -X POST \"https://api.cloudflare.com/client/v4/zones/$(echo $CLOUDFLARE_ZONE_ID)/purge_cache\" -H \"Authorization: Bearer $CLOUDFLARE_API_TOKEN\" -H \"Content-Type: application/json\" --data '{\"purge_everything\":true}'",
    "setup:env": "bash scripts/setup-environment.sh",
    "deploy:webhook": "bash scripts/deploy-webhook-processor.sh",
    "gamma:activate": "bash scripts/activate-gamma-templates.sh",
    "monitor:performance": "bash scripts/monitor-performance.sh",
    "site:wipe": "pwsh scripts/site-wipe-fresh-build.ps1 -Force",
    "site:wipe:safe": "pwsh scripts/site-wipe-fresh-build.ps1",
    "site:wipe:unix": "bash scripts/site-wipe-fresh-build.sh",
    "codex:check-secrets": "node scripts/codex/fix-secrets.js --check",
    "test:e2e": "gh workflow run e2e-signup-automation.yml -f dry_run=true",
    "test:e2e:live": "gh workflow run e2e-signup-automation.yml -f dry_run=false -f notify=true"
  },
  "keywords": [
    "web3",
    "react",
    "blockchain",
    "nft",
    "certificates"
  ],
  "author": "WIRED CHAOS Team",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "axios": "^1.7.7",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "wrangler": "^4.40.3"
  }
}
